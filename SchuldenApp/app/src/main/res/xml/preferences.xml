        android:title="@string/userdata"
        android:key="pref_userdata">
        <EditTextPreference
            android:key="pref_userdata_firstname"
            android:title="@string/firstname"
            android:summary="Geben Sie Ihren Vornamen ein"/>
        <EditTextPreference
            android:key="pref_userdata_lastname"
